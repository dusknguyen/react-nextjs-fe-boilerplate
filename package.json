{
  "name": "react-nextjs-fe-boilerplate",
  "version": "1.0.0",
  "scripts": {
    "postinstall": "npm install pm2@latest -g",
    "lint": "eslint \"src/\" ",
    "format": "prettier --write \"src/**/*.{ts,tsx,md,js,json,html,mjs}\" \"server/**/*.{ts,tsx,md,js,json,html,mjs}\" && eslint \"src/\" --fix",
    "format:all": "prettier --write \"**/*.{ts,tsx,md,js,json,html,mjs}\" && eslint \"src/\" --fix",
    "dev": "npm run lint && next dev",
    "prebuild": "rimraf dist && rimraf .next && npm run format:all",
    "build": "next build && tsc --project tsconfig.server.json",
    "start": "node dist/server.js",
    "pm2:start": "pm2 start ecosystem.config.js",
    "pm2:restart": "pm2 restart react-nextjs-fe-boilerplate",
    "pm2:reload": "pm2 reload react-nextjs-fe-boilerplate",
    "pm2:stop": "pm2 stop react-nextjs-fe-boilerplate",
    "pm2:delete": "pm2 delete react-nextjs-fe-boilerplate"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.9.0",
    "axios": "^1.7.7",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "clsx": "^2.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.0",
    "helmet": "^8.0.0",
    "i18next": "^23.15.1",
    "js-cookie": "^3.0.5",
    "moment": "^2.30.1",
    "morgan": "^1.10.0",
    "next": "^14.2.14",
    "react": "^18.3.1",
    "react-bootstrap": "^2.10.5",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.53.0",
    "sass": "^1.79.4",
    "zod": "^3.23.8",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@next/eslint-plugin-next": "^14.2.14",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/js-cookie": "^3.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.7.4",
    "@types/react": "^18.3.10",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.30.0",
    "eslint-plugin-jest": "^28.8.3",
    "eslint-plugin-jsdoc": "^50.3.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^2.0.3",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.6.2"
  }
}
